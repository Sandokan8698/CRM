    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <!-- START HEADING -->
                <div class="app-heading app-heading-small">
                    <div class="title">
                        <h5>Lista de Contactos</h5>
                    </div>
                    <button type="button" class="btn btn-success btn-icon-fixed pull-right" data-toggle="modal" data-target="#createConctactoModal"><span class="icon-plus-circle"></span>Nuevo Conctacto</button>
                </div>
                <!-- END HEADING -->


                <table class="table table-head-light table-striped table-responsive" id="tbListaContacto">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Cargo</th>
                            <th>Fecha Nacimiento</th>
                            <th>Teléfono</th>
                            <th>Tomador de Decisión</th>
                            <th>Correo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Cliente != null)
                        {
                            foreach (var contacto in Model.Cliente.Contactos)
                            {
                                @Html.Partial("ContactoRowPartialView", contacto)
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
    <!-- END BLOCK -->

</div>
<!-- END CONTAINER -->
<!-- MODAL CREATE -->
