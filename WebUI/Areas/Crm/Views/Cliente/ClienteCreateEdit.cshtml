                            </div>
                        </div>


                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.Cliente.ClienteId)

                        <input type="hidden" id="id" name="id" value="@Model.Cliente.ClienteId" />

                        <div class="form-group">
                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Contacto.Nombre, new { @class = "control-label" })
                                <div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-user-md"></span>
                                        </span>
                                        @Html.TextBoxFor(model => model.Contacto.Nombre, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(model => model.Contacto.Cargo, new { @class = "control-label" })
                                <div>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-envelope-o"></span></span>
                                        @Html.TextBoxFor(model => model.Contacto.Cargo, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-6">
                                <label class="control-label">F.N</label>
                                <div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar-o"></span>
                                        </span>
                                        @Html.TextBoxFor(model => model.Contacto.FechaNacimiento, new { @class = "form-control bs-datepicker" })
                                    </div>
                                </div>

                            </div>

                            <div class="col-md-6">
                                <div>
                                    @Html.LabelFor(model => model.Contacto.Celular, new { @class = "control-label" })
                                </div>
                                <div>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-phone"></span></span>
                                        @Html.TextBoxFor(model => model.Contacto.Celular, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-6">
                                <div>
                                    @Html.LabelFor(model => model.Contacto.Email, new { @class = "control-label" })
                                </div>
                                <div>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="fa fa-envelope-o"></span>
                                        </span>
                                        @Html.TextBoxFor(model => model.Contacto.Email, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div>
                                    @Html.LabelFor(model => model.Contacto.TomaDecision, new { @class = "control-label" })
                                </div>
                                <div>
                                    <div class="app-checkbox">
                                        @Html.EditorFor(model => model.Contacto.TomaDecision)
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button id="btnAddConctacto" type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </div>
        }
    </div>

</div>
