@model WebUI.Areas.Admin.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Boooya - Login With Background</title>

    <!-- META SECTION -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <!-- END META SECTION -->
    <!-- CSS INCLUDE -->
    <link rel="stylesheet" href="@Url.Content("~/Content/styles.css")">
    <!-- EOF CSS INCLUDE -->
</head>
<body>

    <!-- APP WRAPPER -->
    <div class="app app-fh">

        <!-- START APP CONTAINER -->
        <div class="app-container" style="background: url(@Url.Content("~/img/img-2.jpg")) center center no-repeat fixed;">

            <div class="app-login-box">
                <div class="app-login-box-title padding-top-30">
                    <div class="title">SP.CRM</div>
                    <div class="subtitle">Nuevo Usuario</div>
                </div>
                <div class="app-login-box-container margin-top-20">
                    <button class="btn btn-facebook btn-block">Conectate con Facebook</button>
                    <button class="btn btn-twitter btn-block">Conectate con Twitter</button>
                </div>
                <div class="app-login-box-container margin-top-20">
                    <div class="title">Credenciales del Usuario</div>

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "nombre de usuario" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "contraseña" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "confirmar contraseña" })
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Registrar Usuario</button>
                        </div>

                    }
                </div>

            </div>

        </div>
        <!-- END APP CONTAINER -->

    </div>
    <!-- END APP WRAPPER -->
    <!-- IMPORTANT SCRIPTS -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/vendor/jquery/jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/vendor/jquery/jquery-ui.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/vendor/bootstrap/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/vendor/moment/moment.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/vendor/customscrollbar/jquery.mCustomScrollbar.min.js")"></script>
    
    @Scripts.Render("~/bundles/jqueryval")
    <!-- END IMPORTANT SCRIPTS -->
    <!-- APP SCRIPTS -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/app.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/app_plugins.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/app_demo.js")"></script>
    <!-- END APP SCRIPTS -->
</body>
</html>